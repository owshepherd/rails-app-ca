



<div class="reviewAddWrapper">
  
  <%= form_for([@listing, @review]) do |form| %>

    <div class="field reviewfield">
      <p><%= form.label :username %>
        <%= form.text_field :username, :value => @current_user.username, readonly: true %>
      </p>
    </div>
        
        <%= form.text_field :user_id, :value => @current_user.id, hidden: true %>

    <div class="form-groupA commentaddreview">
      <div class="reviewlabel">
      <p><%= form.label :content, "Comment" %></p>
      </div>
      <div>
        <p><%= form.text_area :content %></p>
      </div>
    </div>

    <div class="form-groupA">
      <div class="reviewlabel">
      <p><%= form.label :rating %></p>
      </div>
      
      <div class="field rating">
        <p><%= form.number_field :rating, min: 0, max: 5 %></p>
      </div>

    </div>
  
    <div class="submitreview">
    <p><%= form.submit %></p>
    <% end %>
    </div>
  
</div>