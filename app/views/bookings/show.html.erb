<%= render "shared/nav" %>


<div class="user-create-container">
<div class="container login-container">
  <div class="row">
    <div class="col-md-6 login-form-1">
      <h3>Booking Summary</h3>
        <div class="form-group">
          <h5>Caterer Name</h5>
          <p><%= Provider.find( @booking.provider_id ).name %></p>
        </div>
        <div class="form-group">
          <h5>Location of event</h5>
          <p><%= @booking.location %></p>
        </div>
        <div class="form-group">
          <h5>Date of Event</h5>
          <p><%= @booking.booking_daytime.strftime("%B %d, %Y") %> </p>
        </div>
        <div class="form-group">
          <h5>Start Time</h5>
          <p><%= @booking.booking_daytime.strftime("%H:%M") %></p>
        </div>

        <div class="form-group">
          <h5>Number of Guests</h5>
          <p><%= @booking.persons %></p>
        </div>
    
        <div class="form-group">
          <h5>Cost Per head</h5>
          <p><%= sprintf("$%2.2f", Provider.find( @booking.provider_id).cost_per_head ) %></p>
        </div>

        <div class="form-group">
          <h5>Total Cost</h5>
          <p>$<%= @amount %></p>
        </div>
   
    <div class="button-container1">
    <%= render "shared/stripe_form" %>
    </div>
    <div>
    <span><%= link_to 'Cancel booking', booking_path(@booking.id),
  method: :delete,
  data: { confirm: 'Are you sure?' } %></span>
    </div>


        
      </div>
    </div>
  </div>

</div>
